{
    "name": "Bajaks extension",
    "version": "1.0",
    "description": "Pierwsza Jarkowa wtyczka",
    "permissions": ["declarativeContent", "storage", "bookmarks"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      },
    "manifest_version": 2
}